<div class = "container" >

  <% if @customer.errors.any? %>
    <h4> The following errors prevented the customer details from being saved ! </h4>
    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li class = "text-danger"> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model:@customer, local: true, data: {turbo: false}) do |f| %>

    <div class = "field form-group" >
      <strong><%= f.label :first_name %></strong>
      <%= f.text_field :cust_fname, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :last_name %></strong>
      <%= f.text_field :cust_lname, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :email %></strong>
      <%= f.text_field :cust_email, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :phone_number %></strong>
      <%= f.text_field :cust_phone_number, class:"form-control" %>
    </div><br>

    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Edit customer", class:"btn btn-success" %>
      </div>
    </div><br>

    <div class="text-center">
      <div class = "field form-group" >
        <%= link_to 'Dismiss', { controller: 'customers', action: 'index'}, class: "btn btn-danger" %>
      </div>
    </div>

  <% end %>

</div>
