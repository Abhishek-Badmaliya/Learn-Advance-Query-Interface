<h2 class = "text-center mt-4" >List of Products</h2><br>
<%= link_to "Add New product", new_product_path, class:"btn btn-secondary" %><br><br>

<table class = "table table-bordered">
  <thead class = "table-light text-center">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Capacity</th>
      <th>Active</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class = "text-center">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.capacity %></td>
        <td><%= product.is_active %></td>
        <td><%= product.status %></td>
        <div>
          <td>
            <div class="btn-group" role="group">
              <%= link_to 'Show', product_path(product), class: "text-decoration-none btn btn-info" %>
              <%= link_to 'Edit', edit_product_path(product), class: "text-decoration-none btn btn-dark" %>
              <%= button_to 'Delete', product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
            </div>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
